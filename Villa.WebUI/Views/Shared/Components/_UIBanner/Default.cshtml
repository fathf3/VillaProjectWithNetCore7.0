
@model List<ResultBannerDto>
@{
    int counter = 0;
}
<div class="main-banner">
    <div class="owl-carousel owl-banner">
       @foreach(var item in Model){
            counter++;
            <div class="item item-@counter" style="background-image: url(@item.ImageUrl);">
            <div class="header-text">
                <span class="category">@item.City</span>
                <h2>@item.Title</h2>
            </div>
        </div>
        }
    </div>
</div>