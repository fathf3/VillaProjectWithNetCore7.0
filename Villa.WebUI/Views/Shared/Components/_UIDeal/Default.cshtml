@model List<ResultDealDto>


<div class="section best-deal">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="section-heading">
                    <h6>| Best Deal</h6>
                    <h2>Find Your Best Deal Right Now!</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="tabs-content">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="appartment" role="tabpanel" aria-labelledby="appartment-tab">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="info-table">
                                                <ul>
                                                    <li>Total Flat Space <span>@item.Square m2</span></li>
                                                    <li>Floor number <span>@item.Floor th</span></li>
                                                    <li>Number of rooms <span>@item.RoomCount</span></li>
                                                    <li>
                                                        Parking Available

                                                        @if (item.HasParkingArea)
                                                        {
                                                            <span>Yes</span>
                                                        }
                                                        else
                                                        {
                                                            <span>No</span>
                                                        }

                                                    </li>
                                                    <li>Payment Process <span>@item.PaymentType</span></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <img src="~/VillaAgency/assets/images/deal-01.jpg" alt="">
                                        </div>
                                     
                                    </div>
                                </div>

                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>