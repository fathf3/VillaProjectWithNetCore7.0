@model CreateProductDto
@{
    ViewData["Title"] = "Yeni Product Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="mt-3">


            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-2"></div>
                <label>Görsel</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br />
                <label>Kategori</label>
                <select asp-for="Category" class="form-control">
                    <option value="Luxury Villa">Luxury Villa</option>
                    <option value="Modern Condo">Modern Condo</option>
                    <option value="Apartment">Apartment</option>
                    <option value="Penthouse">Penthouse</option>
                </select>
                <br />
                <label>Oda Sayısı</label>
                <input type="number" asp-for="BedRoomCount" class="form-control" />
                <br />
                <label>Banyo Sayısı</label>
                <input type="number" asp-for="BathRoomCount" class="form-control" />
                <br />
                <label>Alan</label>
                <input type="number" asp-for="Area" class="form-control" />
                <br />
                <label>Kat Sayısı</label>
                <input type="number" asp-for="Floor" class="form-control" />
                <br />
                <label>Park Yeri</label>
                <input type="number" asp-for="ParkingCount" class="form-control" />
                <br />
                <button class="btn btn-outline-dark">Kaydet</button>
            </form>
        </div>
    </div>
</div>