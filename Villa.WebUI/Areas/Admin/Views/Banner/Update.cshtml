@model UpdateBannerDto
@{
    ViewData["Title"] = "Banner Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="mt-3">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-2"></div>
                <input type="hidden" asp-for="Id" />
                <label>Resim</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <label>Şehir</label>
                <input type="text" asp-for="City" class="form-control" />
                <br />
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br />
                <button class="btn btn-outline-dark">Güncelle</button>
            </form>
        </div>
    </div>
</div>