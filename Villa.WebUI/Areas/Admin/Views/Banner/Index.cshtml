@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Banner Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}



<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-responsive-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Görsel</th>
                            <th>Şehir</th>
                            <th>Başlık</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            counter++;
                            <tr>
                                <th>@counter</th>
                                <th><img src="@item.ImageUrl" style="height:50px; width:50px" /></th>
                                <td>@item.City</td>
                                <td>@item.Title</td>
                                <td>
                                    <button onclick="deleteDeal(this)" controllerName="Banner" id="@item.Id" class="m-1 badge badge-danger">Sil</button>
                                    <a asp-controller="Banner" asp-action="Update" asp-route-id="@item.Id" class="m-1 badge badge-info">Güncelle</a>
                                </td>
                            </tr>
                        }

                        <div class="col-lg-3 mt-2">
                            <a asp-controller="Banner" asp-action="Create" class="mb-3 btn btn-outline-dark">Yeni Banner Ekle</a>
                        </div>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/admin-focus/js/deleteItem.js"></script>



