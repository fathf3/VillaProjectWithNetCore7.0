@model CreateQuestionDto
@{
    ViewData["Title"] = "Yeni Question Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="mt-3">


            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-2"></div>
                <label>Soru</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br />
                <label>Şehir</label>
                <textarea asp-for="Answer" class="form-control" rows="4" cols="5">  </textarea>
                <br />
               
                <button class="btn btn-outline-dark">Kaydet</button>
            </form>
        </div>
    </div>
</div>