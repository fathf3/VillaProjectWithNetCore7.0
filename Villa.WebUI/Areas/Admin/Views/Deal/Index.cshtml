@model List<ResultDealDto>
@{
    ViewData["Title"] = "Teklif Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}



<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title"></h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-responsive-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>HouseType</th>
                            <th>Title</th>
                            <th>Square</th>
                            <th>Floor</th>
                            <th>RoomCount</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            counter++;
                            <tr>
                                <th>@counter</th>
                                <th>@item.HouseType</th>
                                <td>@item.Title</td>
                                <td>@item.Square</td>
                                <td>@item.Floor</td>
                                <td>@item.RoomCount</td>
                                <td>
                                    <button onclick="deleteDeal(this)" controllerName="Deal"  id="@item.Id" class="m-1 badge badge-danger">Sil</button>
                                    <a asp-controller="Deal" asp-action="Update" asp-route-id="@item.Id" class="m-1 badge badge-info">Güncelle</a>
                                </td>
                            </tr>
                        }

                        <div class="col-lg-3 mt-2">
                            <a asp-controller="Deal" asp-action="Create" class="mb-3 btn btn-outline-dark">Yeni Deal Ekle</a>
                        </div>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/admin-focus/js/deleteItem.js"></script>


